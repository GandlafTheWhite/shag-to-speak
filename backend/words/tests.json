{
  "tests": [
    {
      "name": "OPTIONS for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Get user words",
      "method": "GET",
      "path": "/",
      "headers": {
        "X-User-Id": "1"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "words": "array"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Add new words",
      "method": "POST",
      "path": "/",
      "headers": {
        "X-User-Id": "1"
      },
      "body": {
        "words": ["hello", "world"]
      },
      "expectedStatus": 200,
      "expectedBody": {
        "words": "array",
        "count": "number"
      },
      "bodyMatcher": "partial"
    }
  ]
}
