{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Register new user",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "email": "test@example.com",
        "password": "password123",
        "name": "Test User",
        "preferences": ["essential_1000", "travel"]
      },
      "expectedStatus": 200,
      "expectedBody": {
        "user": {
          "email": "string",
          "name": "string",
          "status": "string"
        },
        "token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login existing user",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "user": {
          "email": "string",
          "status": "string"
        },
        "token": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
